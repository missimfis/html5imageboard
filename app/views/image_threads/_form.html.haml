= form_for @image_thread do |f|
  -if @image_thread.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image_thread.errors.count, "error")} prohibited this image_thread from being saved:"
      %ul
        - @image_thread.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :created_at
    = f.date_select :created_at
  .actions
    = f.submit 'Save'
