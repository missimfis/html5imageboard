= form_for([@board, @board.posts.build], :html =>{:class => "ib-form"}) do |f|
  .field
    = f.label "Title"
    = f.text_field :title
    = f.label "Data (getting replaced by canvas)"
    = f.text_field :data
    = f.label "Description"
    = f.text_area :description, :rows => "4", :cols => "6"
    %br
    = f.submit 'Create post'
