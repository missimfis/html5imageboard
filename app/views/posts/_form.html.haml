= form_for @board.post do |f|
  -if @post.errors.any?
    #error_explanation.ui-state-error.ui-corner-all{:style=>"padding: 0.7em;"}
      %span.ui-icon.ui-icon-alert{:style=>"float: left; margin-right: .3em;"}
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this board from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :title
    = f.submit 'Create post'
