= form_for @board do |f|
  -if @board.errors.any?
    #error_explanation
      %h2= "#{pluralize(@board.errors.count, "error")} prohibited this image_thread from being saved:"
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :title
    = f.submit 'Create thread'
